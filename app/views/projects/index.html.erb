<div class="container projects mx-auto">
  <p id="notice"><%= notice %></p>

  <h2 class="title">Projects</h2>

  <div class="card-columns">
      <% @projects.each do |project| %>
        <div class="card project-tile">
          <img class="card-img-top" src="http://via.placeholder.com/350x150" alt="">
          <div class="card-body">
            <h4 class="card-title"><%= project.title %></h4>
            <p class="card-text"><%= project.location %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'Show', project, class: "card-link" %>
            <%= link_to 'Edit', edit_project_path(project), class: "card-link" %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
          </div>
        </div>
      <% end %>
  </div>
  <%= link_to 'New Project', new_project_path, class: "btn btn-primary ok-button", role:"button" %>
</div>